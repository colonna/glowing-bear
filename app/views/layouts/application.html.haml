!!!
%html
   %head
      %meta{:charset => "utf-8"}
      %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
      %title= content_for?(:title) ? yield(:title) : "Team Tracker"
      = stylesheet_link_tag "application", :media => "all"
      = javascript_include_tag "application"
      = csrf_meta_tags
      = yield(:head)
%body{:style => "width: 1000px;"}
   %div{:class => "header-image"}
      %img{:src => "/assets/smartsheet.PNG"}
   %div{:class => "session-info"}
      %h4{:style => "float: left; padding-top: -5px; margin-top: -5px"}
         = link_to('Home', home_index_path)
      - if user_signed_in?
         %span{:class => "logout", :style => "float: right;"}
            = @user.email
            (
            = link_to('Logout', destroy_user_session_path, :method => :delete)
            )
   #main{:role => "main"}
      .container
         .content
            .row
               .span12
                  -#= render 'layouts/messages'
                  = yield
   %footer
      %h4{:style => "text-align: center;"}
         -#= link_to_unless_current('Go Home', home_index_path)
